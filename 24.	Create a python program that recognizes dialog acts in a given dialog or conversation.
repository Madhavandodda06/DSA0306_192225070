import nltk

def recognize_dialog_acts(dialog):
    dialog_acts = []

    for utterance in dialog:
        tokens = nltk.word_tokenize(utterance)
        tagged_tokens = nltk.pos_tag(tokens)

        if tokens[-1] == '?':
            dialog_acts.append("question")
        elif tokens[-1] == '!':
            dialog_acts.append("exclamation")
        elif tagged_tokens[0][1] == 'PRP' or tagged_tokens[0][1] == 'VB' or tagged_tokens[0][1] == 'MD':
            dialog_acts.append("statement")
        else:
            dialog_acts.append("other")

    return dialog_acts

if __name__ == "__main__":
    dialog = [
        "How are you?",
        "I'm doing well, thanks!",
        "Could you please pass the salt?",
        "Sure, here you go.",
        "Wow, that's impressive!",
        "I think we should leave now."
    ]

    dialog_acts = recognize_dialog_acts(dialog)
    print("Dialog Acts:")
    for utterance, dialog_act in zip(dialog, dialog_acts):
        print(f"'{utterance}': {dialog_act}")
